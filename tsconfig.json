{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@root/*": ["./*"],
      "@app/*": ["./app/*"],
      "@util/*":["./app/utils/*"],
      "@service/*": ["./services/*"],
      "@schema/*": ["./schema/*"]
    },
    "plugins": [{"transform": "@zerollup/ts-transform-paths"}],
    "types": ["jest","node"]
  }
}